<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunding.demo.mapper.UsersMapper">
<!--注册，输入邮箱，无验证码-->
    <insert id="regist" parameterType="com.yunding.demo.form.RegisterForm">
       INSERT INTO users (email,password) VALUES(#{email},#{password})
    </insert>
    <!--注册，输入手机号，有验证码-->
    <insert id="insertNewUser" >
       INSERT INTO users (phone,password) VALUES(#{phone},#{password})
    </insert>
    <select id="selectOfLogin" resultType="com.yunding.demo.dto.UsersInfoDto" parameterType="com.yunding.demo.form.LoginInfoForm">
        SELECT userId,password from users WHERE email = #{email}
    </select>
    <!--通过手机号查询用户-->
    <select id="selectByPhone" parameterType="String" resultType="com.yunding.demo.entity.UserInfo">
        select * from users where phone = #{phone}
    </select>
    <select id="selectByEmail" parameterType="String" resultType="com.yunding.demo.entity.UserInfo">
        select * from users where email = #{email}
    </select>

</mapper>